<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/taskDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dateField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="datetime"
            app:layout_constraintEnd_toStartOf="@+id/datePickerBtn"
            app:layout_constraintStart_toStartOf="@+id/taskDesc"
            app:layout_constraintTop_toBottomOf="@+id/taskDesc" />

        <Spinner
            android:id="@+id/proritiesList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:entries="@array/priorities"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/datePickerBtn"
            app:layout_constraintStart_toStartOf="@+id/dateField"
            app:layout_constraintTop_toBottomOf="@+id/dateField" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:text="Task"
            app:layout_constraintBottom_toTopOf="@+id/taskDesc"
            app:layout_constraintStart_toStartOf="@+id/taskDesc" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:text="Deadline"
            app:layout_constraintBottom_toTopOf="@+id/dateField"
            app:layout_constraintStart_toStartOf="@+id/dateField" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:text="Priority"
            app:layout_constraintBottom_toTopOf="@+id/proritiesList"
            app:layout_constraintStart_toStartOf="@+id/proritiesList" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Dodaj"
            app:layout_constraintEnd_toEndOf="@+id/proritiesList"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <ImageButton
            android:id="@+id/datePickerBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            app:layout_constraintBottom_toBottomOf="@+id/dateField"
            app:layout_constraintEnd_toEndOf="@+id/taskDesc"
            app:layout_constraintTop_toTopOf="@+id/dateField" />

        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/progressText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/proritiesList"
            app:layout_constraintTop_toBottomOf="@+id/proritiesList" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="@+id/progressBar" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ems="2"
            android:gravity="end"
            android:text="0"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="@+id/proritiesList"
            app:layout_constraintTop_toTopOf="@+id/progressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>